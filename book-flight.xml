<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="book-flight" parallel="tests">

    <test name="book-flight-test-1">
        <parameter name="noOfPassenger" value="1" />
        <parameter name="expectedPrice" value="$584 USD" />
        <classes>
            <class name = "com.newtours.test.BookFlightTest" />
        </classes>
    </test>

    <test name="book-flight-test-2">
        <parameter name="noOfPassenger" value="2" />
        <parameter name="expectedPrice" value="$1169 USD" />
        <classes>
            <class name = "com.newtours.test.BookFlightTest" />
        </classes>
    </test>

    <test name="book-flight-test-3">
        <parameter name="noOfPassenger" value="3" />
        <parameter name="expectedPrice" value="$1753 USD" />
        <classes>
            <class name = "com.newtours.test.BookFlightTest" />
        </classes>
    </test>

    <test name="book-flight-test-4">
        <parameter name="noOfPassenger" value="4" />
        <parameter name="expectedPrice" value="$2338 USD" />
        <classes>
            <class name = "com.newtours.test.BookFlightTest" />
        </classes>
    </test>

</suite>